<h1><%= @post.titre %> </h1>
<p> <%= @post.contenu %> </p>
<img src="<%= link_to(image_tag(@post.image_url, :alt => "alt text", :class => "anyclass"), @post.image_url) %>" class="img-responsive" alt="Responsive image">

<% unless @post.comments.empty? %>
	<tr>
  		<td class="comment">
    		<span class="content"><%= comment.content %></span>
    		<span class="timestamp">Posté il y a <%= time_ago_in_words(comment.created_at) %>.</span>
 		 </td>
	</tr>
	<%= will_paginate @comments %>
<% end %>

<% if signed_in? %>
  <table class="front" summary="Pour visiteur identifié">
    <tr>
      <td class="main">
        <h1 class="comment">Un commentaire ?</h1>
			<%= form_for @comment do |f| %>
			  <%= render 'shared/messages_erreurs', :object => f.object %>
			  <div class="field">
			    <%= f.text_area :content %>
			  </div>
			  <div class="actions">
			    <%= f.submit "Soumettre" %>
			  </div>
			<% end %>
		</td>
	 </tr>
 </table>

<% else %>
  <%= link_to "S'inscrire pour commenter!", signup_path, :class => "signup_button round" %>
<% end %>