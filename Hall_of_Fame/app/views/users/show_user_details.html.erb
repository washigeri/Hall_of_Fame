<div class="container-fluid">
  <div class="row">
    <div class="col-sm-10"><h1><%=@user.nickname %></h1></div>
    <div class="col-sm-2"><a href="<%= show_user_url(@user).to_s %>" class="pull-right"><img title="Image de profil" class="img-circle img-responsive" src="<%= @user.avatar_url.to_s%>"></a></div>
  </div>
  <div class="row">
    <div class="col-sm-3">
      <ul class="list-group">
        <li class="list-group-item text-muted">Profil</li>
        <li class="list-group-item text-right"><span class="pull-left"><strong>Inscription</strong></span><%=@user.created_at.to_date%></li>
        <li class="list-group-item text-right"><span class="pull-left"><strong>Dernière connexion </strong></span> <%=time_ago_in_words(@user.last_sign_in_at.to_date)%></li>
        <li class="list-group-item text-right"><span class="pull-left"><strong>Nombre de posts</strong></span><%=@user.posts.count%></li>
        <% if current_user.id == @user.id %>
            <li class="list-group-item"><button typ="button" class="btn btn-primary-outline btn-lg btn-block"><%=link_to "Editer...", edit_user_registration_path%></button></li>
        <%end%>
      </ul>
    </div>
    <div class="col-sm-9">
      <ul class="list-group">
        <li class="list-group-item text-muted">Mes Informations Personnelles</li>
        <li class="list-group-item text-right"><span class="pull-left"><strong>Nickname</strong></span><%=@user.nickname %></li>
        <li class="list-group-item text-right"><span class="pull-left"><strong>E-Mail </strong></span><a href="mailto:#"><%=@user.email%></a></li>
        <li class="list-group-item text-right"><span class="pull-left"><strong>Inscription</strong></span><%=@user.created_at.to_date%></li>
        <li class="list-group-item text-right"><span class="pull-left"><strong>Dernière connexion </strong></span> <%=time_ago_in_words(@user.last_sign_in_at.to_date)%></li>
        <li class="list-group-item text-right"><span class="pull-left"><strong>Nombre de posts</strong></span><%=@user.posts.count%></li>
      </ul>
    </div>
    </div>
 </div>