<h2>Inscription</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <%= f.text_field :nickname, label: "Pseudo" %>

  </div>

  <div class="field">

    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">

    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caract√®res minimums)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", label: "Mot de passe" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", label: "Mot de passe" %>
  </div>
  <div class="field">
    <%= f.label :avatar do %>
      <%= f.file_field :avatar %>
      <%= f.hidden_field :avatar_cache %>
     <%end%>
  </div>
  <div class="actions">
    <%= f.submit "Inscription" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
