<h2>Changer votre mot de passe</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caractÃ¨res minimums)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off", label:"Nouveau mot de passe" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", label: "Confirmez le nouveau mot de passe" %>
  </div>

  <div class="actions">
    <%= f.submit "Changer mon mot de passe" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
